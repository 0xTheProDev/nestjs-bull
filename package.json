{
  "name": "nest-bull",
  "version": "0.3.1",
  "description": "Nest - modern, fast, powerful node.js web framework (@bull)",
  "author": "Frederic Woelffel <hello@fwoelffel.me>",
  "license": "MIT",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "format": "prettier **/**/*.ts --ignore-path ./.prettierignore --write && git status",
    "lint": "tslint -p tsconfig.json -c tslint.json {e2e,src}/**/*.ts",
    "prepublish": "npm run build",
    "test": "npm run test:e2e",
    "test:e2e": "jest --config=e2e/jest-e2e.json --detectOpenHandles --forceExit"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/fwoelffel/nest-bull.git"
  },
  "bugs": {
    "url": "https://github.com/fwoelffel/nest-bull/issues"
  },
  "homepage": "https://github.com/fwoelffel/nest-bull",
  "dependencies": {
    "bull": "^3.3.10"
  },
  "devDependencies": {
    "@nestjs/common": "^5.7.4",
    "@nestjs/core": "^5.7.4",
    "@nestjs/testing": "^5.7.4",
    "@types/bull": "^3.3.6",
    "@types/jest": "^24.0.11",
    "@types/node": "^7.0.41",
    "husky": "^1.3.1",
    "jest": "^24.5.0",
    "lint-staged": "^8.1.5",
    "prettier": "^1.16.4",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^6.4.0",
    "sort-package-json": "^1.22.0",
    "ts-jest": "^24.0.0",
    "tslint": "^5.9.1",
    "typescript": "^2.9.2"
  },
  "lint-staged": {
    "{src,e2e}/**/*.{ts,json}": [
      "npm run format",
      "npm run lint",
      "sort-package-json",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
